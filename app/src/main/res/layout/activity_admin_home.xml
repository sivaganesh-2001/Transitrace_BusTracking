<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="1"
    tools:context=".AdminHomeActivity">


   <View
       android:id="@+id/top_view"
       android:layout_width="match_parent"
       android:layout_height="200dp"
       android:background="@drawable/bg_view" />

   <ImageView
       android:id="@+id/imageViewProfile"
       android:layout_width="70dp"
       android:layout_height="117dp"
       android:layout_gravity="start"
       android:contentDescription="@string/profile_icon_description"
       android:maxWidth="35dp"
       android:maxHeight="35dp"
       android:paddingStart="8dp"
       android:paddingEnd="16dp"
       android:src="@drawable/profile_white" />

   <GridLayout
       android:layout_marginTop="-80dp"
       android:id="@+id/gridLayout"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_below="@id/top_view"
       android:rowCount="4"
       android:columnCount="2"
       >

      <!-- Repeat the CardView elements for other cells -->

      <androidx.cardview.widget.CardView
          android:layout_width="150dp"
          android:layout_height="150dp"
          android:layout_row="1"
          android:layout_rowWeight="1"
          android:layout_column="0"
          android:layout_columnWeight="1"
          android:layout_margin="12dp"
          app:cardCornerRadius="15dp"
          app:cardElevation="12dp"
          android:id="@+id/driver"
          >

         <LinearLayout

             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:gravity="center"
             android:orientation="vertical">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:src="@drawable/driver" />

            <TextView
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:text="Manage Driver"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />


         </LinearLayout>

      </androidx.cardview.widget.CardView>



      <androidx.cardview.widget.CardView
          android:layout_width="150dp"
          android:layout_height="150dp"
          android:layout_row="1"
          android:layout_rowWeight="1"
          android:layout_column="1"
          android:layout_columnWeight="1"
          android:layout_margin="12dp"
          app:cardCornerRadius="15dp"
          app:cardElevation="12dp"
          android:id="@+id/Track"
          >

         <LinearLayout

             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:gravity="center"
             android:orientation="vertical">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="83dp"
                android:gravity="center"
                android:src="@drawable/bus_track" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Track Bus"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />


         </LinearLayout>

      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:layout_width="150dp"
          android:layout_height="150dp"
          android:layout_row="2"
          android:layout_rowWeight="1"
          android:layout_column="0"
          android:layout_columnWeight="1"
          android:layout_margin="12dp"
          app:cardCornerRadius="15dp"
          app:cardElevation="12dp"
          android:id="@+id/emergency"
          >

         <LinearLayout

             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:gravity="center"
             android:orientation="vertical">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:src="@drawable/emergency" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Emergency"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />


         </LinearLayout>

      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:layout_width="150dp"
          android:layout_height="150dp"
          android:layout_row="2"
          android:layout_rowWeight="1"
          android:layout_column="1"
          android:layout_columnWeight="1"
          android:layout_margin="12dp"
          app:cardCornerRadius="15dp"
          app:cardElevation="12dp"
          android:id="@+id/buslist"
          >

         <LinearLayout

             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:gravity="center"
             android:orientation="vertical">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:src="@drawable/list" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Bus List"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />


         </LinearLayout>

      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:layout_width="150dp"
          android:layout_height="150dp"
          android:id="@+id/complaint"
          android:layout_rowWeight="1"
          android:layout_row="3"
          android:layout_column="0"
          android:layout_columnWeight="1"
          android:layout_margin="12dp"
          app:cardCornerRadius="15dp"
          app:cardElevation="12dp">

         <LinearLayout

             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:gravity="center"
             android:orientation="vertical">

            <ImageView
                android:layout_width="82dp"
                android:layout_height="95dp"
                android:gravity="center"
                android:src="@drawable/complaint" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:text="Complaints"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />


         </LinearLayout>

      </androidx.cardview.widget.CardView>


      <androidx.cardview.widget.CardView
          android:layout_width="150dp"
          android:layout_height="150dp"

          android:layout_rowWeight="1"
          android:layout_row="3"
          android:layout_column="1"
          android:layout_columnWeight="1"
          android:layout_margin="12dp"
          app:cardCornerRadius="15dp"
          app:cardElevation="12dp"
          android:id="@+id/user"
          >

         <LinearLayout

             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:gravity="center"
             android:orientation="vertical">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:src="@drawable/user" />

            <TextView
                android:layout_width="76dp"
                android:layout_height="54dp"
                android:layout_gravity="center_horizontal"
                android:text="Manage User"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />


         </LinearLayout>

      </androidx.cardview.widget.CardView>
   </GridLayout>



   <TextView
       android:id="@+id/textView"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Dashboard"
       android:textColor="@color/white"
       android:textSize="36sp"
       android:textStyle="bold"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="30dp"

       />
</RelativeLayout>
