<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="UserSignupActivity"
    android:background="@drawable/navbar_image">

    <ImageView
        android:id="@+id/profile"
        android:layout_width="53dp"
        android:layout_height="110dp"
        android:src="@drawable/profile_white"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.005"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.053" />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="28dp"
        android:layout_marginBottom="-20dp"
        android:id="@+id/cardview"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:orientation="vertical"
            android:padding="28dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register User"
                android:textColor="@color/dark_bluee"
                android:textStyle="bold"
                android:textSize="32sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:text="Please Fill with your information" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="30dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:alpha="0.7"
                    android:textStyle="bold"
                    android:id="@+id/textViewName1"
                    />
                <View
                    android:layout_width="50dp"
                    android:layout_height="30dp"/>

                <EditText
                    android:id="@+id/etname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginStart="16dp"
                    android:layout_toRightOf="@id/textViewName1"

                    android:hint="Enter Your Name"
                    android:inputType="textEmailAddress"
                    android:padding="12dp" />
            </LinearLayout>



            <View
                android:layout_width="wrap_content"
                android:layout_height="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:alpha="0.7"
                    android:textStyle="bold"
                    android:id="@+id/textViewName2"
                    />

                <View
                    android:layout_width="52dp"
                    android:layout_height="29dp" />

                <EditText
                    android:id="@+id/etmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_toRightOf="@id/textViewName2"

                    android:hint="Enter Your Email Address"
                    android:inputType="textEmailAddress"
                    android:textAlignment="center"
                    android:padding="12dp" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:alpha="0.7"
                    android:textStyle="bold"
                    android:id="@+id/textViewName3"
                    />

                <View
                    android:layout_width="56dp"
                    android:layout_height="32dp" />

                <EditText
                    android:id="@+id/etphone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="9dp"
                    android:layout_toRightOf="@id/textViewName3"

                    android:hint="Enter Phone Number"
                    android:textAlignment="center"
                    android:inputType="phone"
                    android:padding="12dp" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewName4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:text="Password"
                    android:textStyle="bold" />

                <View
                    android:layout_width="44dp"
                    android:layout_height="30dp" />

                <EditText
                    android:id="@+id/etpassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:textAlignment="center"
                    android:layout_toRightOf="@id/textViewName4"

                    android:hint="Enter Password"
                    android:inputType="textPassword"
                    android:padding="12dp" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:id="@+id/textViewName5"
                    android:text="Re-Type Password"
                    android:textStyle="bold"

                    />

                <View
                    android:layout_width="28dp"
                    android:layout_height="31dp" />

                <EditText
                    android:id="@+id/etrepassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_toRightOf="@id/textViewName5"

                    android:hint="ReType Password"
                    android:textAlignment="center"
                    android:inputType="textPassword"
                    android:padding="12dp" />
            </LinearLayout>


            <View
                android:layout_width="wrap_content"
                android:layout_height="30dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/signupbutton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Sign Up"
                android:backgroundTint="@color/dark_bluee"
                android:textColor="@color/white"
                app:cornerRadius="32dp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>